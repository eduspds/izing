{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"]
  },
  "exclude": ["dist", "public", "integra-crm-backend-main", "src/**/__tests__", "src/**/*.spec.ts"]
}
